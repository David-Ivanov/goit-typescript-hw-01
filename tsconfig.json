{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "ES2019",
      "dom"
    ],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": [
    "**/*.ts"
  ],
}